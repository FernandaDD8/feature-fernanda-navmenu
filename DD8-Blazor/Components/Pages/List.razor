        <div class="row">
            <!-- Card 1 -->
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudButton Variant="Variant.Filled" Color="Color.Primary">
                            Suspensa
                        </MudButton>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudText><h5 class="card-title">Teste Ambiente Interno</h5></MudText>
                    <MudText Typo="Typo.body2"><p class="card-text">Teste ambiente</p></MudText>
                    <a href="#" class="btn">Início 04/11/2024</a>
                </MudCardContent>
            </MudCard>

            <!-- Card 2 -->
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudButton Variant="Variant.Filled" Color="Color.Primary">
                            Não iniciada
                        </MudButton>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudText><h5 class="card-title">Novo Teste Atualização</h5></MudText>
                    <MudText Typo="Typo.body2"><p class="card-text">Emilio</p></MudText>
                    <a href="#" class="btn">Início 01/07/2024</a>
                </MudCardContent>
            </MudCard>
        </div>
    </div>

    <span>Itens por página:</span>
