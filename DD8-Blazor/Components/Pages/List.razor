<PageTitle>DD8 - Login</PageTitle>

<div class="content">
    <h2>Projetos</h2>

    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <form class="d-flex form-header">
                <input class="form-control me-2 input-search" type="search" id="search" name="search" placeholder="Pesquisar projetos"
                       aria-label="Search">
                <span class="icon-search">

                </span>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@evento1">
                    Filtrar
                </MudButton>

                @code {
                    private void evento1()
                    {
                        Console.WriteLine("Botão clicado!");
                    }
                }

                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@evento2">
                    Ordenar
                </MudButton>

                @code {
                    private void evento2()
                    {
                        Console.WriteLine("Botão clicado!");
                    }
                }
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@evento3">
                    Novo Projeto
                </MudButton>

                @code {
                    private void evento3()
                    {
                        Console.WriteLine("Botão clicado!");
                    }
                }
            </form>
        </div>
